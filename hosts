# vim: filetype=yaml

#[mz_host]
#MzHost2.my.domain
#[registry]
#registry.my.domain
#[masters]
#master[1-2].my.domain 
#[nodes]
#node[1-2].my.domain
#[kubernete_cluster:children]
#masters
#nodes
#[kubernete_cluster:vars]
#ansible_user=mz
#ansible_become_user=mz

#YAML format:
all:
  children:
    mz_host:
      hosts:
        MzHost2.my.domain:
    registry:
      hosts:
        registry.my.domain:
      vars:
        ansible_user: mz
        ansible_become_method: sudo
        ansible_become_user: mz
    kubernete_cluster:
      children:
        masters:
          hosts:
            master[1:2].my.domain:
        nodes:
          hosts:
            node[1:2].my.domain:
      vars:
        ansible_user: mz
        ansible_become_method: sudo
        ansible_become_user: mz
